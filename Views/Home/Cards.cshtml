@model Worship.Models.CardsViewModel

<div style="display: flex; flex-wrap: wrap; flex: none;">

    @if (Model != null)
    {
        <div class="panel panel-default col-sm-3" style="box-shadow: 5px 5px 5px #888888; margin-right: 20px;">
            <div class="panel-heading">
                <h3 class="panel-title">Músicas de @Html.ValueFor(model => model.ultimasMusicas.dt_evento, "{0:dd/MM/yyyy}")</h3>
            </div>
            <div class="panel-body">
                <p>@Html.Raw(Model.ultimasMusicas.tipo_evento.tx_tipo_evento)</p>
            </div>
            <table class="table">
                @foreach (var item in Model.ultimasMusicas.evento_musicas.OrderBy(m => m.nr_sequencia))
                {
                    <tr><td>@Html.Raw(item.nr_sequencia)</td><td>@Html.Raw(item.hino.tx_titulo_hino)</td></tr>
                }
            </table>
            <div style="padding: 10px; width: 50%; margin: 0 auto;">
                <a href="/eventos/EditLastEvent" class="btn btn-primary">Ver evento</a>
            </div>
        </div>
        <div class="panel panel-default col-sm-3" style="box-shadow: 5px 5px 5px #888888; margin-right: 20px;">
            <div class="panel-heading">
                <h3 class="panel-title">Músicas mais cantadas</h3>
            </div>
            <table class="table">
                @foreach (var item in Model.musicasMaisCantadas.OrderByDescending(m => m.qtde).Take(8))
                {
                    <tr><td>@Html.Raw(item.musica)</td><td>@Html.Raw(item.qtde)</td></tr>
                }
            </table>
        </div>
        <div class="panel panel-default col-sm-3" style="box-shadow: 5px 5px 5px #888888; margin-right: 20px;">
            <div class="panel-heading">
                <h3 class="panel-title">Tópicos mais cantados</h3>
            </div>
            <table class="table">
                @foreach (var item in Model.topicosMaisCantados.OrderByDescending(m => m.qtde).Take(8))
                {
                    <tr><td>@Html.Raw(item.topico)</td><td>@Html.Raw(item.qtde)</td></tr>
                }
            </table>
        </div>
    }
</div>

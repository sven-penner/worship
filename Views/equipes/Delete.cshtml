@model Worship.equipe

@{
    ViewBag.Title = "Excluir equipe";
}

<h2>Excluir equipe</h2>

<h3>Tem certeza que deseja excluir esta equipe?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tx_nome_equipe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_nome_equipe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nr_ano)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nr_ano)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nr_domingo)
        </dt>

        <dd>
            @{ switch (Model.nr_domingo)
                {
                    case 1:
                        @Html.Raw("Primeiro");
                        break;
                    case 2:
                        @Html.Raw("Segundo");
                        break;
                    case 3:
                        @Html.Raw("Terceiro");
                        break;
                    case 4:
                        @Html.Raw("Quarto");
                        break;
                    case 5:
                        @Html.Raw("Quinto");
                        break;
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cd_integrante_lider)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lider.tx_nome_integrante)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

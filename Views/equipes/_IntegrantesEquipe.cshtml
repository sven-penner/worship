@model ICollection<Worship.equipe_integrante>

@{
    Layout = null;
}

@{
    if (Model.Count > 0)
    {
        @Html.Raw("<tr><td colspan='4'>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class='glyphicon glyphicon-user' title='Integrantes'>&nbsp;</i>");
        var count = 0;
        var equipe = "";
        foreach (var item in Model)
        {
            if (count > 0) { 
                @Html.Raw(", ");
            }
            equipe = item.cd_equipe.ToString();
            @Html.DisplayFor(modelItem => item.integrante.tx_nome_curto_integrante)
            count++;
        }
        @Html.Raw("</td><td>")
        <a href="@Url.Action("Edit/"+equipe, "equipe_integrante")">
            <i class="glyphicon glyphicon-pencil" title="Editar integrantes"></i>
            <span class="sr-only">Excluir</span>
        </a>
        @Html.Raw("</td>")
        }
    }

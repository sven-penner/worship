@model ICollection<Worship.equipe_integrante>

@{
    Layout = null;
}

@if (Model.Count > 0)
{
        <tr>
            <td colspan='5'>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <div class='row' style="float: right; padding-right: 2em;">
                    <label class="control-label">Integrantes</label>
                @foreach (var item in Model)
                {
                    var eq = item.cd_equipe.ToString();
                    string nome_integrante;
                    if (item.integrante.tx_nome_curto_integrante == null)
                    {
                        nome_integrante = item.integrante.tx_nome_integrante;
                    } else
                    {
                        nome_integrante = item.integrante.tx_nome_curto_integrante;
                    }
                    if (item.integrante.foto_integrante != null)
                    {
                        @Html.Raw("<img src='" + Url.Action("GetImage", "integrantes", new { id = item.cd_integrante }) + "' alt='" + nome_integrante + "' width='50' height='50' style='padding: 2px;' title='" + nome_integrante + "' />")
                    }
                    else
                    {
                        string tx_nome_curto_integrante = item.integrante.tx_nome_curto_integrante;
                        @Html.Raw("<img id='foto' name='foto' src='/Content/images/noprofile.png' alt='" + nome_integrante + "' height='50' width='50' title='" + nome_integrante + "' />");
                    }
                }
                </div>
            </td>
            <td>
                <a href="@Url.Action("Edit/"+Model.First().cd_equipe, "equipe_integrante")">
                    <i class="glyphicon glyphicon-pencil" title="Editar integrantes"></i>
                    <span class="sr-only">Excluir</span>
                </a>
            </td>
        </tr>
}

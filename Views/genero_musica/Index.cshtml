@model IEnumerable<Worship.genero_musica>

@{
    ViewBag.Title = "Gêneros";
}

<h2>Gêneros</h2>

<p>
    <button type="button" class="btn btn-primary">
        @Html.ActionLink("Criar novo", "Create", null, new { @style = "color:white;" })
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tx_genero_musica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nrHinosUsando)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(i => i.tx_genero_musica)) {
    <tr>
        <td>
            @Html.ActionLink(@Html.Raw(item.tx_genero_musica).ToString(), "Edit", new { id = item.cd_genero_musica })
        </td>
        <td>
            <span class="badge">@Html.DisplayFor(modelItem => item.nrHinosUsando)</span>
        </td>
        <td>
            @if (item.nrHinosUsando == 0)
            {
                <a href="@Url.Action("Delete", new { id = item.cd_genero_musica })">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span class="sr-only">Excluir</span>
                </a>
            }
        </td>
    </tr>
}

</table>

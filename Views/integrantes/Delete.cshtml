@model Worship.integrante

@{
    ViewBag.Title = "Excluir integrante";
}

<h2>Excluir integrante</h2>

<h3>Tem certeza que deseja excluir este integrante?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tx_nome_integrante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_nome_integrante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tx_email_integrante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_email_integrante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tx_nome_curto_integrante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_nome_curto_integrante)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

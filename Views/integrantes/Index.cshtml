@model IEnumerable<Worship.integrante>

@{
    ViewBag.Title = "Integrantes";
}

<h2>Integrantes</h2>

<p>
    <button type="button" class="btn btn-primary">
        @Html.ActionLink("Criar novo", "Create", null, new { @style = "color:white;" })
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tx_nome_integrante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tx_email_integrante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tx_nome_curto_integrante)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.Raw(item.tx_nome_integrante).ToString(), "Edit", new { id = item.cd_integrante })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tx_email_integrante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tx_nome_curto_integrante)
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id = item.cd_integrante })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Excluir</span>
            </a>
        </td>
    </tr>
}

</table>

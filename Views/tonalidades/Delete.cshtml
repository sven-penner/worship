@model Worship.tonalidade

@{
    ViewBag.Title = "Excluir tonalidade";
}

<h2>Excluir tonalidade</h2>

<h3>Tem certeza que deseja excluir esta tonalidade?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tx_tonalidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_tonalidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tx_descricao_tonalidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_descricao_tonalidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nr_posicao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nr_posicao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ind_maior_menor)
        </dt>

        <dd>
            @if (Model.ind_maior_menor == "+") { @Html.Raw("Maior") } else { @Html.Raw("Menor") }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
